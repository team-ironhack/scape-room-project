<div class="container mt-4 w-75">

<div class="mb-4">
  <h1>Todas las empresas:</h1>
</div> 

{{#if company}}

  <div class="room-card mb-3 flex-sm-row">
    {{#each company}}
    <div class="card mb-5">
      <img src="{{this.avatar}}" class=" company-img-cards card-img-top img-cards" alt="...">
      <div class="card-body">
        <h5 class="card-title fw-semibold">{{this.companyName}}</h5>
        <p class="card-text">{{this.city}}</p>
        <p class="card-text">{{this.phone}}</p>
        <p class="card-text">{{this.website}}</p>
        <a href="/company/{{this._id}}" class="btn see-more-btn">Ver m√°s</a>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>